# Environment Configuration
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development  # development, staging, production
DEBUG=true
SECRET_KEY=change_this_to_a_secure_random_string_in_production

# Database
DATABASE_URL=postgresql://bias_user:bias_pass_dev@localhost:5432/bias_detector

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API Configuration
API_V1_PREFIX=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ML Models
MODEL_DIRECTION_PATH=models/production/direction
MODEL_INTENSITY_PATH=models/production/intensity
MODEL_CACHE_SIZE=100
MODEL_BATCH_SIZE=32

# News Crawler
CRAWLER_MAX_WORKERS=10
CRAWLER_MAX_ARTICLES_PER_SOURCE=50

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
