# Production Environment Configuration
# NOTE: Set all sensitive values (API_KEYS, DB_PASSWORD, SECRET_KEY) in Ploi Environment Variables
# Do NOT commit actual values to this file!

# Application Settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=${SECRET_KEY}

# Database Configuration
DB_USER=pbd_user
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=political_bias_detector
DATABASE_URL=postgresql://pbd_user:${DB_PASSWORD}@postgres:5432/political_bias_detector

# API Keys - Set these in Ploi Dashboard (Environment Variables)
GEMINI_API_KEY=${GEMINI_API_KEY}
NEWS_API_KEY=${NEWS_API_KEY}
SERPER_API_KEY=${SERPER_API_KEY}

# Server Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://10.122.0.3,http://localhost
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ML Models Configuration
MODEL_DIRECTION_PATH=models/custom_bias_detector
MODEL_INTENSITY_PATH=models/intensity
MODEL_CACHE_SIZE=100
MODEL_BATCH_SIZE=32
MODEL_DOWNLOAD_TIMEOUT=3600

# Monitoring & Logging
PROMETHEUS_ENABLED=true
SENTRY_DSN=
LOG_LEVEL=info

# Optional Services
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Email (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
