# Production Environment Configuration
# Copy this to .env.production and fill in your values

# Application
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database
DB_USER=pbd_user
DB_PASSWORD=your-secure-database-password
DB_NAME=political_bias_detector
DATABASE_URL=postgresql://pbd_user:your-secure-database-password@postgres:5432/political_bias_detector

# API Keys
GEMINI_API_KEY=your-gemini-api-key
NEWS_API_KEY=your-newsapi-key
SERPER_API_KEY=your-serper-api-key

# Server Configuration
API_V1_PREFIX=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ML Models
MODEL_DIRECTION_PATH=models/production/direction
MODEL_INTENSITY_PATH=models/production/intensity
MODEL_CACHE_SIZE=100
MODEL_BATCH_SIZE=32

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# CORS
CORS_ORIGINS=http://10.122.0.3,http://localhost

# Redis (if needed)
REDIS_URL=redis://redis:6379/0

# Email/Notifications (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
